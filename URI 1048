#include <stdio.h>
#include <stdlib.h>
 main (){
 	double x,y,z;
 	scanf ("%lf",&x);
 	if (x>=0 && x<=400){
 		y = (x*15)/100;
 		z = x + y;
 		printf ("Novo salario: %.2lf\n",z);
 		printf ("Reajuste ganho: %.2lf\n",y);
 		printf ("Em percentual: 15 %%\n");
	 }else if (x>= 400.01 && x<= 800){
	 	y = (x*12)/100;
	 	z = x + y;
	 	printf ("Novo salario: %.2lf\n",z);
	 	printf ("Reajuste ganho: %.2lf\n",y);
	 	printf ("Em percentual: 12 %%\n");
	 }else if (x>= 800.01 && x<= 1200){
	 	y = (x*10)/100;
	 	z = x + y;
	 	printf ("Novo salario: %.2lf\n",z);
	 	printf ("Reajuste ganho: %.2lf\n",y);
	 	printf ("Em percentual: 10 %%\n");
	 }else if (x>= 1200.01 && x <= 2000){
	 	y = (x*7)/100;
	 	z = x + y;
	 	printf ("Novo salario: %.2lf\n",z);
	 	printf ("Reajuste ganho: %.2lf\n",y);
	 	printf ("Em percentual: 7 %%\n");
	 }else if (x>2000 ){
	 	y = (x*4)/100;
	 	z = x + y;
	 	printf ("Novo salario: %.2lf\n",z);
	 	printf ("Reajuste ganho: %.2lf\n",y);
	 	printf ("Em percentual: 4 %%\n");
	 }
	  system ("pause>>null");
	 }
